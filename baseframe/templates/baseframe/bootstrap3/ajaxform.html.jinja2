{% from "baseframe/bootstrap3/forms.html.jinja2" import renderform, ajaxform, widget_ext_scripts, widgetscripts %}
{{ renderform(form=form, formid=formid, ref_id=ref_id, submit=submit, message=message, cancel_url=cancel_url, multipart=multipart, autosave=autosave, last_revision_id=last_revision_id) }}
{%- if with_chrome -%}
  {{ ajaxform(ref_id=ref_id, request=request, force=true) }}
{%- endif -%}

{{ widget_ext_scripts(form) }}

<script type="text/javascript">
  activate_widgets();
  {{ widgetscripts(form, script=false) }}
</script>
