      {%- if link.children -%}
        <a href="{{ link.url or '#' }}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ link.title }}</a>
        <ul class="dropdown-menu">
          {{ networkbar_inner(siteid, link.children) }}
        </ul>
      {%- else -%}
        {%- if link.sep -%}
          {{ link.title }}
        {%- else -%}
          <a href="{{ link.url or (toplevel and appurl or '#') }}">{{ link.title }}</a>
        {%- endif -%}
      {%- endif -%}
    </li>
  {%- endfor %}
{%- endmacro -%}

