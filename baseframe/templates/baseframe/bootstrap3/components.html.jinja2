{%- macro flash_messages() -%}
  {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
      {% for category, message in messages %}
        <div class="alert alert-{{category}} fade in">
          <a href="#" class="close" data-dismiss="alert" aria-label="{% trans %}Close{% endtrans %}">&times;</a>
          {{ message }}
        </div>
      {% endfor %}
    {% endif %}
  {% endwith %}
{%- endmacro -%}

{%- macro networkbar_login_beacon(url) %}
  <iframe height="0" width="0" tabindex="-1" style="display: none; border: 0; height: 0; width: 0" aria-hidden="true" role="presentation" src="{{ url }}"></iframe>
{% endmacro %}

{%- macro networkbar_inner(siteid, links, toplevel=false, appurl='#') %}
  {%- for link in links %}
    <li id="hg-networkbar-{{ link.name }}" {%- if siteid == link.name %} class="{% if toplevel and loop.first %}strong {% endif %}selected"{% elif link.sep %} class="hg-menu-section"{% elif toplevel and loop.first %} class="strong"{% endif %}>
      {%- if link.children -%}
        <a href="{{ link.url or '#' }}" class="hg-submenu">{{ link.title }}</a>
        <ul>
          {{ networkbar_inner(siteid, link.children) }}
        </ul>
      {%- else -%}
        {%- if link.sep -%}
          {{ link.title }}
        {%- else -%}
          <a href="{{ link.url or (toplevel and appurl or '#') }}">{{ link.title }}</a>
        {%- endif -%}
      {%- endif -%}
    </li>
  {%- endfor %}
{%- endmacro -%}

{%- macro networkbar(siteid=none, login=false, baseclass=none, containerclass="container", beacon=true) -%}
  <div id="hg-bar" class="no-print {%- if baseclass %} {{ baseclass }}{% endif %}">
    <div class="{{ containerclass }}">
      {%- with links = networkbar_links() %}{% if links %}
        {%- cache 60, 'networkbar-links-html', siteid or '' %}
          <ul id="hg-barlinks">
            {{ networkbar_inner(siteid, links, toplevel=true, appurl=request.url_root) }}
          </ul>
        {%- endcache %}
      {%- endif %}{% endwith %}
      {%- if login %}
        <ul id="hg-usertools">
          {% if not current_auth.is_anonymous -%}
            <li class="profile">
              {%- with orgs = current_auth.user.organization_links() %}{% if orgs %}
                <a href="#" title="{{ current_auth.user.pickername }}" class="hg-submenu">{{ current_auth.user.fullname }}</a>
                <ul>
                  <li><a href="{{ current_auth.user.profile_url }}">{% trans %}My profile{% endtrans %}</a></li>
                  {%- for org in orgs %}
                    <li><a href="{{ org.link }}">{{ org.title }}</a></li>
                  {%- endfor %}
                </ul>
              {%- else %}
                <a href="{{ current_auth.user.profile_url }}" title="{{ current_auth.user.pickername }}">{{ current_auth.user.fullname }}</a>
              {% endif %}{%- endwith %}
            </li>
            <li><a href="{{ url_for('logout') }}">Logout</a></li>
          {%- else %}
            <li><a href="{{ url_for('login') }}">Login or sign up</a></li>
          {%- endif %}
        </ul>
        {%- if login and beacon and current_auth.is_anonymous %}
          {%- if current_auth.lastuser %}
            {{ networkbar_login_beacon(current_auth.lastuser.endpoint_url(current_auth.lastuser.login_beacon_iframe_endpoint) + '?client_id=' + config['LASTUSER_CLIENT_ID'] + '&login_url=' + url_for('login', _external=true)) }}
          {%- endif %}
        {%- endif %}
      {%- endif %}
    </div>
  </div>
{%- endmacro -%}

